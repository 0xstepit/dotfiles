# ctrl + alt - l : yabai -m window --swap east

# Applications shortcut.
alt - p : open -a Bitwarden.app;
alt - b : open -a Arc.app
alt - s: open -s /Applications/Slack.app/Contents/MacOS/Slack
alt - t: open -a /Applications/Alacritty.app/Contents/MacOS/alacritty
